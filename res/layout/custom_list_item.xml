<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<ImageView android:src="@drawable/icon" android:layout_width="48dip"
		android:layout_height="48dip" android:id="@+id/list_item_icon"
		android:layout_alignParentTop="true" android:layout_alignParentLeft="true"></ImageView>
	<TextView android:layout_width="fill_parent" android:id="@+id/list_item_title"
		android:text="List Item Title" android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:layout_alignParentTop="true" android:layout_toRightOf="@id/list_item_icon"></TextView>
	<TextView android:layout_width="fill_parent" android:id="@+id/list_item_description"
		android:text="List item description" android:layout_height="wrap_content"
		android:layout_toRightOf="@id/list_item_icon" android:layout_below="@id/list_item_title"></TextView>

</RelativeLayout>
